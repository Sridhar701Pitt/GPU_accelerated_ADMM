# docker build command
docker build -t python3:admm_cuda .

docker run -it --rm --privileged -e DISPLAY=$DISPLAY \
--env-file ./.env -v /tmp/.X11-unix:/tmp/.X11-unix:rw \
-v "$(pwd)":/root/Python_ws --gpus all --shm-size=5.00gb \
-p 52001:22 python3:admm_cuda
# --shm-size param in the above command increases shared memory to 5gb for ray rllib performance
# Useful Docker commands
# Setting envs
